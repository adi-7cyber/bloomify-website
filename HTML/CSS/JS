/* ===============================
   SHOP GRID
================================ */

const grid = document.getElementById("productGrid");

products.forEach(item => {
  const card = document.createElement("div");
  card.className = "product";
  card.innerHTML = `
    <img src="${item.image}" alt="${item.name}">
    <div class="info">
      <h3>${item.name}</h3>
      <p>₹${item.price}</p>
      <button onclick="quickOrder('${item.name}')">Order Now</button>
    </div>
  `;
  grid.appendChild(card);
});

/* ===============================
   BOUQUET BUILDER
================================ */

let total = 0;
const bouquetContainer = document.getElementById("bouquetOptions");
const totalPrice = document.getElementById("totalPrice");

products.forEach(item => {
  const div = document.createElement("div");
  div.className = "bouquet-card";
  div.innerHTML = `
    <img src="${item.image}" alt="${item.name}">
    <div class="info">
      <h4>${item.name}</h4>
      <p>₹${item.price}</p>
      <button onclick="addToBouquet(${item.price})">Add to Bouquet</button>
    </div>
  `;
  bouquetContainer.appendChild(div);
});

function addToBouquet(price) {
  total += price;
  totalPrice.innerText = total;
}

/* ===============================
   SCROLL
================================ */

function scrollToSection(id) {
  document.getElementById(id).scrollIntoView({ behavior: "smooth" });
}

/* ===============================
   WHATSAPP ORDER
================================ */

function quickOrder(name) {
  const phone = "919999999999"; // replace with your WhatsApp number
  window.open(
    `https://wa.me/${phone}?text=I want to order ${name}`,
    "_blank"
  );
}

function orderBouquet() {
  const phone = "919999999999"; // replace with your WhatsApp number
  window.open(
    `https://wa.me/${phone}?text=I want to order a custom bouquet worth ₹${total}`,
    "_blank"
  );
}


function openModal(id) {
  document.getElementById(id).style.display = "flex";
}

function closeModal(id) {
  document.getElementById(id).style.display = "none";
}

function toggleReadMore(element) {
  const moreDesc = element.previousElementSibling;
  if (moreDesc.style.display === "block") {
    moreDesc.style.display = "none";
    element.innerText = "Read More";
  } else {
    moreDesc.style.display = "block";
    element.innerText = "Read Less";
  }
}

// Open modal by id
function openModal(id) {
  const modal = document.getElementById(id);
  if (modal) modal.style.display = "flex";
}

// Close modal by id
function closeModal(id) {
  const modal = document.getElementById(id);
  if (modal) modal.style.display = "none";
}

// Close modal when clicking outside content
window.onclick = function(event) {
  const modals = document.querySelectorAll(".modal");
  modals.forEach(modal => {
    if (event.target === modal) {
      modal.style.display = "none";
    }
  });
}

