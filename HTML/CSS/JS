<script>
  // Flower data
  const flowers = [
    { name: "Aster", description: "Asters symbolize patience and elegance.", link: "https://en.wikipedia.org/wiki/Aster" },
    { name: "Azalea", description: "Azaleas symbolize abundance and wealth.", link: "https://en.wikipedia.org/wiki/Azalea" },
    { name: "Begonia", description: "Begonias represent caution and deep thoughts.", link: "https://en.wikipedia.org/wiki/Begonia" },
    { name: "Chamomile", description: "Chamomile symbolizes energy in adversity.", link: "https://en.wikipedia.org/wiki/Chamomile" },
    { name: "Daisy", description: "Daisies symbolize innocence and purity.", link: "https://en.wikipedia.org/wiki/Daisy" },
    { name: "Edelweiss", description: "Edelweiss represents courage and devotion.", link: "https://en.wikipedia.org/wiki/Edelweiss" },
    { name: "Freesia", description: "Freesias symbolize friendship and trust.", link: "https://en.wikipedia.org/wiki/Freesia" },
    { name: "Gardenia", description: "Gardenias symbolize secret love and purity.", link: "https://en.wikipedia.org/wiki/Gardenia" },
    { name: "Hyacinth", description: "Hyacinths symbolize sport and playfulness.", link: "https://en.wikipedia.org/wiki/Hyacinth_(plant)" },
    { name: "Iris", description: "Irises symbolize faith, hope, and wisdom.", link: "https://en.wikipedia.org/wiki/Iris_(plant)" },
    { name: "Jasmine", description: "Jasmine symbolizes love, beauty, and sensuality.", link: "https://en.wikipedia.org/wiki/Jasmine" },
    { name: "Kalanchoe", description: "Kalanchoe symbolizes endurance and lasting affection.", link: "https://en.wikipedia.org/wiki/Kalanchoe" },
    { name: "Lavender", description: "Lavender represents purity and calm.", link: "https://en.wikipedia.org/wiki/Lavandula" },
    { name: "Marigold", description: "Marigolds symbolize passion and creativity.", link: "https://en.wikipedia.org/wiki/Marigold" },
    { name: "Narcissus", description: "Narcissus represents rebirth and renewal.", link: "https://en.wikipedia.org/wiki/Narcissus_(plant)" },
    { name: "Orchid", description: "Orchids represent luxury, strength, and beauty.", link: "https://en.wikipedia.org/wiki/Orchidaceae" },
    { name: "Peony", description: "Peonies symbolize romance and prosperity.", link: "https://en.wikipedia.org/wiki/Peony" },
    { name: "Quince Blossom", description: "Symbolizes hope and prosperity.", link: "https://en.wikipedia.org/wiki/Quince" },
    { name: "Rose", description: "Roses symbolize love, beauty, and passion.", link: "https://en.wikipedia.org/wiki/Rose" },
    { name: "Sunflower", description: "Sunflowers represent happiness, positivity, and loyalty.", link: "https://en.wikipedia.org/wiki/Sunflower" },
    { name: "Tulip", description: "Tulips symbolize elegance and grace.", link: "https://en.wikipedia.org/wiki/Tulip" },
    { name: "Violet", description: "Violets symbolize loyalty and faithfulness.", link: "https://en.wikipedia.org/wiki/Violet_(plant)" },
    { name: "Wisteria", description: "Wisteria symbolizes longevity and immortality.", link: "https://en.wikipedia.org/wiki/Wisteria" },
    { name: "Xeranthemum", description: "Symbolizes immortality and everlasting love.", link: "https://en.wikipedia.org/wiki/Xeranthemum" },
    { name: "Yarrow", description: "Yarrow symbolizes healing and protection.", link: "https://en.wikipedia.org/wiki/Yarrow" },
    { name: "Zinnia", description: "Zinnias symbolize endurance, daily remembrance, and goodness.", link: "https://en.wikipedia.org/wiki/Zinnia" }
  ];

  const alphabetNav = document.getElementById("alphabetNav");
  const flowerContainer = document.getElementById("flowerContainer");
  const pageNumbers = document.getElementById("pageNumbers");
  const modal = document.getElementById("flowerModal");
  const modalName = document.getElementById("modalName");
  const modalDescription = document.getElementById("modalDescription");
  const modalLink = document.getElementById("modalLink");

  let currentLetter = "A";
  let currentPage = 1;
  const itemsPerPage = 4;

  // Alphabet buttons
  for (let i = 65; i <= 90; i++) {
    const letter = String.fromCharCode(i);
    const btn = document.createElement("button");
    btn.innerText = letter;
    btn.onclick = () => { currentLetter = letter; currentPage = 1; updateActiveLetter(); showFlowers(); };
    alphabetNav.appendChild(btn);
  }

  function updateActiveLetter() {
    document.querySelectorAll(".alphabet-nav button").forEach(btn => {
      btn.classList.toggle("active", btn.innerText === currentLetter);
    });
  }

  function showFlowers() {
    flowerContainer.innerHTML = "";
    const filtered = flowers.filter(f => f.name.toUpperCase().startsWith(currentLetter));
    const totalPages = Math.ceil(filtered.length / itemsPerPage);
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const pageFlowers = filtered.slice(start, end);

    pageFlowers.forEach(flower => {
      const card = document.createElement("div");
      card.className = "flower-card";
      card.innerHTML = `<img src="images/${flower.name.toLowerCase().replace(/ /g, "_")}.jpg" alt="${flower.name}"><h3>${flower.name}</h3>`;
      card.onclick = () => openModal(flower);
      flowerContainer.appendChild(card);
    });

    // Update pagination numbers
    pageNumbers.innerHTML = `Page ${currentPage} of ${totalPages || 1}`;
    document.getElementById("prevPage").disabled = currentPage === 1;
    document.getElementById("nextPage").disabled = currentPage === totalPages || totalPages === 0;
  }

  function prevPage() {
    if (currentPage > 1) { currentPage--; showFlowers(); }
  }

  function nextPage() {
    const filtered = flowers.filter(f => f.name.toUpperCase().startsWith(currentLetter));
    const totalPages = Math.ceil(filtered.length / itemsPerPage);
    if (currentPage < totalPages) { currentPage++; showFlowers(); }
  }

  function openModal(flower) {
    modalName.innerText = flower.name;
    modalDescription.innerText = flower.description;
    modalLink.href = flower.link;
    modal.style.display = "flex";
  }

  function closeModal() {
    modal.style.display = "none";
  }

  // Initialize
  updateActiveLetter();
  showFlowers();
</script>



